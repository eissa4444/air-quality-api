{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via nodemon",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nodemon",
                "--inspect"
            ],
            "program": "${workspaceFolder}/src/app.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
